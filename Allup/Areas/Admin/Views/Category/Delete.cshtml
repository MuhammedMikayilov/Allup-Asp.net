@model Category
@{
    ViewData["Title"] = "Delete";
}

<div class="container bg-white">
    @if (Model.IsMain)
    {
        <div class="col-md-12 p-2 bg-dark mb-3">
            <img src="~/assets/images/@Model.Image" width="200" />
        </div>
    }

    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                <div>
                    @*@Html.Raw(Model.Description)*@
                    @if (Model.IsMain && Model.Children.Count() != 0)
                    {
                        <ul>
                            @foreach (var child in Model.Children)
                            {
                                <li>@child.Name</li>
                            }
                        </ul>
                    }

                    @if (!Model.IsMain)
                    {
                        <p>Parent: <em>@Model.Parent.Name</em></p>
                    }
                </div>
            </div>
        </div>

    </div>
    <h3 class="text-danger">Are you sure?</h3>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary mt-3">Go Back</a>
</div>

