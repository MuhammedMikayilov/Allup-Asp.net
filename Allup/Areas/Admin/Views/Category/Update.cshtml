@model Category
@{
    ViewData["Title"] = "Update";
}

<div class="container bg-white">
    @if (Model.IsMain)
    {
        <div class="col-md-12 p-2 bg-dark mb-3">
            <img src="~/assets/images/@Model.Image" width="200" />
        </div>
    }

    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label asp-for="@Model.Name">Category Name</label>
                        <input asp-for="@Model.Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="@Model.Name"></span>
                    </div>
                </form>
                <div class="form-group" id="mainCategories">
                    <label asp-for="@Model.Photos">Main Categories</label>
                    <span class="text-danger" asp-validation-for="@Model.Photos"></span>
                </div>
                <div>
                    @*@Html.Raw(Model.Description)*@
                    @*@if (Model.IsMain && Model.Children.Count() != 0)
                    {
                        <ul>
                            @foreach (var child in Model.Children)
                            {
                                <li>@child.Name</li>
                            }
                        </ul>
                    }

                    @if (!Model.IsMain)
                    {
                        <p>Parent: <em>@Model.Parent.Name</em></p>
                    }*@
                </div>
            </div>
        </div>

    </div>
    <h3 class="text-danger">Are you sure?</h3>
    <form method="post">
        <button type="submit" class="btn btn-danger">Update</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary mt-3">Go Back</a>
</div>

