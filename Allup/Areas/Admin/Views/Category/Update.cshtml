@model Category
@{
    ViewData["Title"] = "Update";
}

<div class="container bg-white">
    @if (Model.IsMain)
    {
        <div class="col-md-12 p-2 bg-dark mb-3">
            <img src="~/assets/images/@Model.Image" width="200" height="200" />
        </div>
    }

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Category</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Name">Name</label>
                        <input asp-for="@Model.Name" class="form-control" id="exampleInputName1" placeholder="Name">
                        <span class="text-danger" asp-validation-for="@Model.Name"></span>
                    </div>

                   
                    <div class="form-group" id="@(Model.IsMain? "" : "mainCategories")">
                        @if (Model.IsMain)
                        {
                            <label asp-for="@Model.Photos">Change Photo</label>
                            <input asp-for="@Model.Photos" class="form-control" id="exampleInputName1" placeholder="Name">
                            <span class="text-danger" asp-validation-for="@Model.Photos"></span>
                        }
                        else
                        {
                            <label asp-for="@Model.Photos">Main Categories</label>
                            <select class="custom-select" name="Main_Id">
                                @foreach (var main in ViewBag.MainCategory)
                                {
                                    <option value="@main.Id">@main.Name</option>
                                }
                            </select>
                            <span class="text-danger" asp-validation-for="@Model.Photos"></span>
                        }
                    </div>
                    
                        <div class="form-group" id="mainCategories">
                            
                        </div>


                    @*@if (!Model.IsMain)
        {
            <p>Parent: <em>@Model.Parent.Name</em></p>
        }*@
                    <button type="submit" class="btn btn-primary mr-2">Cahnge</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>

